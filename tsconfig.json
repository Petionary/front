{
  "compilerOptions": {
    // JavaScript 컴파일 대상 버전
    "target": "esnext",
    // 기본 라이브러리 설정
    "lib": ["dom", "dom.iterable", "esnext"],
    // 모듈 시스템 설정
    "module": "esnext",
    // 모듈 해결 방식 설정 (Node.js 기반)
    "moduleResolution": "node",
    // JavaScript 파일 허용 여부
    "allowJs": true,
    // 라이브러리 검사 생략 여부
    "skipLibCheck": true,
    // 엄격한 타입 검사 활성화
    "strict": true,
    // CommonJS, AMD 등의 모듈을 ESNext 형태로 변환
    "esModuleInterop": true,
    // JSON 모듈을 불러올 수 있도록 설정
    "resolveJsonModule": true,
    // 각 파일을 독립적인 모듈로 취급
    "isolatedModules": true,
    // JSX 코드 처리 방식 설정 (파일에 주석을 그대로 유지)
    "jsx": "preserve",
    // 증분 컴파일 설정
    "incremental": true,
    // 경로 별칭 설정
    "paths": {
      "@/*": ["./src/*"]
    },
    // 모든 출력 파일의 출력 폴더를 지정합니다.
    "outDir": "./dist",
    // 암시적인 'any' 타입 사용에 대한 오류 보고 비활성화
    "noImplicitAny": false,
    // 'null' 및 'undefined' 고려한 엄격한 타입 검사 활성화
    "strictNullChecks": true,
    // 함수 유형에 대한 엄격한 타입 검사 활성화
    "strictFunctionTypes": true,
    // 클래스 속성 초기화에 대한 엄격한 타입 검사 활성화
    "strictPropertyInitialization": true,
    // 함수가 명시적으로 반환하지 않을 경우 오류 보고 활성화
    "noImplicitReturns": true,
    // 파일 이름의 일관성 강제 설정
    "forceConsistentCasingInFileNames": true,
    // TypeScript 플러그인 설정 (Next.js 플러그인 포함)
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": true
  },
  // 포함할 파일 목록 설정
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  // 제외할 디렉토리 설정
  "exclude": ["node_modules"]
}
